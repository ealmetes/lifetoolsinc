@model lifetoolsinc.Models.RegisterBusiness
@{
    ViewBag.Title = "Register";
}


<div class="container">
    <div class="row">
        <div class="col-lg-12">
            @using (Html.BeginForm("RegisterBusiness", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
             
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                   
                    <div class="col-md-12">  
                        @Html.LabelFor(m => m.BusinessName, new { @class = "control-label" })                  
                        @Html.TextBoxFor(m => m.BusinessName, new { @class = "form-control text-dark" })
                        @Html.ValidationMessageFor(m => m.BusinessName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    
                    <div class="col-md-12">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control text-dark" })
                       @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    
                    <div class="col-md-12">
                        @Html.LabelFor(m => m.FirstName, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control text-dark" })
                  @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    
                    <div class="col-md-12">
                        @Html.LabelFor(m => m.LastName, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control text-dark" })
                        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    
                    <div class="col-md-12">
                        @Html.LabelFor(m => m.PhoneNumber, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control text-dark", @id = "phone", @placeholder = "(888)888-8888" })
                        @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                   
                    <div class="col-md-12">
                        @Html.LabelFor(m => m.Zipcode, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Zipcode, new { @class = "form-control text-dark" })
                        @Html.ValidationMessageFor(m => m.Zipcode, "", new { @class = "text-danger" })
                    </div>
                </div>
              
                <div class="form-group">
                   
                    <div class="col-md-12">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control text-dark" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                   
                    <div class="col-md-12">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control text-dark" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" class="btn btn-success pull-right" value="Register" />
                    </div>
                </div>
            }
        </div>

    </div>
</div>

<script src="https://code.jquery.com/jquery-1.11.3.js"></script>
<script src="https://code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<!-- CSS Includes -->
<script src="~/Scripts/jquery.maskedinput.js"></script>
<link href="https://code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" language="javascript">
    $(document).ready(function () {
        $('phone').mask("(999) 999-9999");
    });

</script>
