@using lifetoolsinc.Models
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_Layoutblank.cshtml";
    ViewBag.Title = "Log in";

}



<div class="row">
    <div class="container text-center">
        <p> The answer to understanding behavior, communication and connecting...</p>
       
        <P>...at work, home and play.</P>
    </div>

    <div id="sidebar-menu">
        <ul>
            <li class="has_sub has-success">
                <a href="javascript:void(0);" class="waves-effect bg-success"><i class="mdi mdi-account"></i> <span> Existing Member Sign In </span> <span class="pull-right"><i class="mdi mdi-key"></i></span></a>
                <ul class="list-unstyled">
                    <div class="col-md-12 text-dark">

                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal m-t-20", role = "form" }))
            {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <input class="form-control text-dark" type="text" required="" id="Email" name="Email" placeholder="Username">
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-xs-12">
                                    <input class="form-control text-dark" type="password" required="" id="Password" name="Password" placeholder="Password">
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-xs-12">
                                    <div class="checkbox checkbox-primary">
                                        @Html.CheckBoxFor(m => m.RememberMe)
                                        @Html.LabelFor(m => m.RememberMe)
                                    </div>
                                </div>
                            </div>

                            <div class="form-group text-center m-t-40">
                                <div class="col-xs-12">
                                    <button class="btn btn-primary btn-block btn-lg waves-effect waves-light" type="submit">Log In</button>
                                </div>
                            </div>



                        }



                    </div>
                </ul>
            </li>

            <li class="has_sub has-warning">
                <a href="javascript:void(0);" class="waves-effect bg-warning"><i class="mdi mdi-account-multiple"></i> <span> Create Business Account </span> <span class="pull-right"><i class="mdi mdi-plus"></i></span></a>
                <ul class="list-unstyled">
                         @Html.Partial("_RegisterBusiness")
                </ul>
            </li>

            <li class="has_sub text-primary">
                <a href="javascript:void(0);" class="waves-effect bg-primary"><i class="mdi mdi-account-plus"></i> <span> Create Personal Account </span> <span class="pull-right"><i class="mdi mdi-plus"></i></span></a>
                <ul class="list-unstyled">
                    @Html.Partial("_RegisterPersonal")
                </ul>
            </li>

   
        </ul>
    </div>
    

</div>

